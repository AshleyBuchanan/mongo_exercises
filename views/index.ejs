<%- include('partials/header') %>

<body>
    <header>
        <h2>mongoDB exercise</h2>
    </header>
    <main>
        <section id="left-side">
            <h3>Create (user)</h3>        
            <form action="/addUser" method="POST">
                <h4>1</h4>
                <input type="text" name="name" placeholder="Name" value="Ashley Buchanan" required>
                <input type="email" name="email" placeholder="Email" value="aneatemail@someplace.com" required>
                <button type="submit">Add User</button>
            </form>

            <h3>Read (1-6)</h3>
            <form action="/getMoviesByDirector" method="POST">                                  <!-- this POST is intentional -->
                <h4>1</h4>
                <input type="text" name="directorName" placeholder="Director's Name" value="Christopher Nolan" required>
                <button type="submit">Find Movies</button>
            </form>

            <form action="/getMoviesByGenre" method="POST">                                     <!-- this POST is intentional -->
                <h4>2</h4>
                <input type="text" name="genre" placeholder="Genre" value="Action" required>
                <button type="submit">Find Movies</button>
            </form>

            <form action="/getMoviesByIMDB" method="POST">                                      <!-- this POST is intentional -->
                <h4>3</h4>
                <input type="text" name="imdbRating" placeholder="IMDB Rating" value="8" required>
                <button type="submit">Find Movies</button>
            </form>

            <form action="/getMoviesByActorsNames" method="POST">                               <!-- this POST is intentional -->
                <h4>4</h4>
                <input type="text" name="actorsNames" placeholder="Movies including Actors' Names, separated with a comma" value="Tom Hanks, Tim Allen" required>
                <button type="submit">Find Movies</button>
            </form>

            <form action="/getMoviesByOnlyActorsNames" method="POST">                           <!-- this POST is intentional -->
                <h4>5</h4>
                <input type="text" name="onlyActorsNames" placeholder="Movies with only Actors' Names, separated with a comma" value="Tom Hanks, Tim Allen" required>
                <button type="submit">Find Movies</button>
            </form>

            <form action="/getMoviesByDirectorAndGenre" method="POST">                          <!-- this POST is intentional -->
                <h4>6</h4>
                <input type="text" name="genre" placeholder="Genre" value="Comedy" required>
                <input type="text" name="directorName" placeholder="Director's Name" value="Steven Spielberg" required>
                <button type="submit">Find Movies</button>
            </form>

            <h3>Update (1-4)</h3>
            <form action="/updateMovieAvailability" method="POST">                              <!-- this POST is intentional -->
                <h4>1</h4>
                <input type="text" name="title" placeholder="Title" value="The Matrix" required>
                <input type="text" name="platform" placeholder="Available on what Platforms, separated with a comma" value="Sflix" required>
                <button type="submit">Update Movie</button>
            </form>

            <form action="/updateMovieMetacritic" method="POST">                                <!-- this POST is intentional -->
                <h4>2</h4>
                <input type="text" name="title" placeholder="Title" value="The Matrix" required>
                <input type="text" name="value" placeholder="Increment by what Value" value="1" required>
                <button type="submit">Update Movie</button>
            </form>

            <form action="/updateMovieGenres" method="POST">                                    <!-- this POST is intentional -->
                <h4>3</h4>
                <input type="text" name="year" placeholder="Movie(s) Year" value="1997" required>
                <input type="text" name="genres" placeholder="Add what genres, separated with a comma" value="Gen Z" required>
                <button type="submit">Update Movie(s)</button>
            </form>

            <form action="/updateMovieIMDBRating" method="POST">                                <!-- this POST is intentional -->
                <h4>4</h4>
                <input type="text" name="imdbRating" placeholder="Movie(s) with what imdbRating" value="5" required>
                <input type="text" name="value" placeholder="Increment by what Value" value="1" required>
                <button type="submit">Update Movie(s)</button>
            </form>

            <h3>Delete (1-3)</h3>
            <form action="/deleteMovieById" method="POST">                                      <!-- this POST is intentional -->
                <h4>1</h4>
                <input type="text" name="_id" placeholder="_id" value="573a1390f29313caabcd446f" required>
                <button type="submit">Delete Movie</button>
            </form>

            <form action="/deleteAllMovieComments" method="POST">                               <!-- this POST is intentional -->
                <h4>2</h4>
                <input type="text" name="title" placeholder="Title" value="The Matrix" required>
                <button type="submit">Delete Comments</button>
            </form>

            <form action="/deleteAllMoviesWithNoGenres" method="POST">                          <!-- this POST is intentional -->
                <h4>3</h4>
                <input type="text" name="title" placeholder="Delete all movies with no genres" value="Delete all movies with no genres">
                <button type="submit">Delete Movies</button>
            </form>
        </section>  

        <section id="right-side">
            <h3>Aggregate (1-2)</h3>
            <form action="/aggregateMoviesPerYear" method="POST">                               <!-- this POST is intentional -->
                <h4>1</h4>
                <input 
                    type="text" 
                    name="title" 
                    placeholder="Aggregate movies to count how many were released each year and display from the earliest year to the latest." 
                    value="Aggregate movies to count how many were released each year and display from the earliest year to the latest."
                >
                <button type="submit">Aggregate</button>
            </form>

            <form action="/aggregateAverageIMDBRatingsByDirector" method="POST">                          <!-- this POST is intentional -->
                <h4>2</h4>
                <input 
                    type="text" 
                    name="title" 
                    placeholder="Calculate the average IMDb rating for movies grouped by director and display from highest to lowest."
                    value="Calculate the average IMDb rating for movies grouped by director and display from highest to lowest."
                >
                <button type="submit">Aggregate</button>
            </form>
        </section>
    </main>
</body>
</html>


